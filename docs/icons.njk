---
pagination:
  data: icons
  size: 1
  alias: icon
eleventyComputed:
  title: "{{ icon.shortName}} | Rivet icons"
permalink: "icons/{{ icon.shortName }}/index.html"
layout: "layouts/base.njk"
path: "../../"
---

<div class="rvt-m-bottom-lg">
  <a href="{{ path }}">Rivet icons</a>

  <h1 class="rvt-ts-46 rvt-text-bold rvt-m-top-sm rvt-lh-title">{{ icon.shortName }}</h1>

  <h2 class="rvt-ts-sm rvt-m-top-lg"><span class="rvt-text-bold">Icon style samples</h2>
  <div class="rvt-flex rvt-flex-wrap rvt-m-top-sm">
    <rvt-icon name="{{ icon.shortName }}" class="rvt-p-all-sm rvt-box rvt-m-right-sm"></rvt-icon>
    <rvt-icon name="{{ icon.shortName }}" class="rvt-p-all-sm rvt-box rvt-m-right-sm docs-sample-colored"></rvt-icon>
    <rvt-icon name="{{ icon.shortName }}" class="rvt-p-all-sm rvt-box docs-sample-dark"></rvt-icon>
  </div>

  <h2 class="rvt-ts-sm rvt-m-top-lg"><span class="rvt-text-bold">Option 1:</span> Custom element</h2>
  {% set code = '<rvt-icon name="' + icon.shortName + '"></rvt-icon>' %}
  <pre><code class="docs-code-block">{{ code }}</code></pre>

  <h2 class="rvt-ts-sm rvt-m-top-lg"><span class="rvt-text-bold">Option 2:</span> SVG symbols</h2>
  {% set code = '<span class="rvt-icon">\n  <svg>\n    <use href="#' + icon.fullName + '"></use>\n  </svg>\n</span>' %}
  <pre><code class="docs-code-block">{{ code }}</code></pre>

  <h2 class="rvt-ts-sm rvt-m-top-lg"><span class="rvt-text-bold">Option 3:</span> Copy or download</h2>
  <pre><code class="docs-code-block">{{ icon.source }}</code></pre>
  <div class="rvt-flex rvt-wrap">
    <a class="rvt-button rvt-button--secondary rvt-m-top-sm rvt-m-right-sm" download href="{{ path }}dist/{{ icon.fullFileName }}">Download SVG<span class="rvt-sr-only">, {{ icon.title }} icon</span></a>
    <span class="docs-copy">
      <button data-copy-button class="rvt-button rvt-button--secondary rvt-m-top-sm">Copy SVG<span class="rvt-sr-only">, {{ icon.title }} icon</span></button>
      <span class="docs-copy__alert" data-copy-alert role="alert"></span>
    </span>
  </div>
</div>

<script>
const copyButton = document.querySelector('[data-copy-button]')
const copyAlert = document.querySelector('[data-copy-alert]')
if ('clipboard' in navigator) {
  copyButton.addEventListener('click', () => {
    navigator.clipboard.writeText(`{{ icon.source | safe }}`).then(() => {
      copyAlert.innerText = 'Copied'
      setTimeout(() => {
        copyAlert.innerText = ''
      }, 2000)
    })
  })
} else {
  copyButton.remove()
}
</script>
